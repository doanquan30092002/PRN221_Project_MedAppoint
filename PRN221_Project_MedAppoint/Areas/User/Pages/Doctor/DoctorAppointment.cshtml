@page "/doctorAppointment"
@using PRN221_Project_MedAppoint.Model
@model PRN221_Project_MedAppoint.Areas.User.Pages.Doctor.DoctorAppointmentModel
@{

}


<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Star Admin2 </title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/doctor/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/doctor/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/doctor/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/doctor/vendors/typicons/typicons.css">
    <link rel="stylesheet" href="~/doctor/vendors/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="~/doctor/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/doctor/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="~/doctor/js/select.dataTables.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/doctor/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/doctor/images/favicon.png" />
</head>

<section>


    <div class="row flex-grow">
        <div class="col-12 grid-margin stretch-card">
            <div class="card card-rounded">
                <div class="card-body">
                    <div class="d-sm-flex justify-content-between align-items-start">
                        <div>
                            <h4 class="card-title card-title-dash">Appointment</h4>
                        </div>
                        <div>
                            <div class="shop__option__search">
                                <form id="searchForm" method="get" asp-page-handler="Search">
                                    <input asp-for="CurrentFilter" placeholder="Search" name="SearchString">
                                    <button type="submit"><i class="fa fa-search"></i></button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive  mt-1">
                        <table class="table select-table">
                            <thead>
                                <tr>
                                    @* <th>
                                    <div class="form-check form-check-flat mt-0">
                                    <label class="form-check-label">
                                    <input type="checkbox" class="form-check-input" aria-checked="false"><i class="input-helper"></i>
                                    </label>
                                    </div>
                                    </th> *@
                                    <th>Customer</th>
                                    <th>Specials</th>
                                    <th>Start</th>
                                    <th>View</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListAppointments)
                                {
                                    <tr>
                                        @* <td>
                                    <div class="form-check form-check-flat mt-0">
                                    <label class="form-check-label">
                                    <input type="checkbox" class="form-check-input" aria-checked="false"><i class="input-helper"></i>
                                    </label>
                                    </div>
                                    </td> *@
                                        <td>
                                            <div class="d-flex ">
                                                <img src="~/doctor/images/faces/face1.jpg" alt="">
                                                <div>
                                                    <h6>@item.User.Username</h6>
                                                    <p>@item.User.Phone</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <h6>@item.Specialist.SpecialtyName</h6>
                                        </td>
                                        <td>
                                            <h6>@item.StartDate</h6>
                                        </td>
                                        <td>
                                            <a asp-page="/Doctor/ElectronicMedicalRecords" asp-area="User" asp-route-patientInformationId="@item.UserID" asp-route-appointmentID="@item.AppointmentID">View medical history</a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        @{
                            var pagingmodel = new Helpers.PagingModel()
                            {
                                currentPage = Model.currentPage,
                                countPages = Model.countPages,
                                generateUrl = (int? p) => Url.Page("/Doctor/DoctorAppointment", new { p = p, SearchString = Model.CurrentFilter })
                            };
                        }

                        <partial name="_Paging" model="@pagingmodel" />
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<!-- plugins:js -->
<script src="~/doctor/vendors/js/vendor.bundle.base.js"></script>
<script src="~/doctor/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
<!-- endinject -->
<!-- Plugin js for this page -->
<script src="~/doctor/vendors/chart.js/Chart.min.js"></script>
<script src="~/doctor/vendors/progressbar.js/progressbar.min.js"></script>
<!-- End plugin js for this page -->
